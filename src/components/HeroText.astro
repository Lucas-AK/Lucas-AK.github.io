---
  // HeroText.astro
---

<section class="flex justify-center items-center h-screen px-4">
    <!-- Left Side: Hero Text -->
    <div class="flex flex-col mr-10">
      <h1 class="text-6xl md:text-7xl font-bold leading-relaxed text-white">
        <span class="line opacity-0 animate-fade-in-left">Hi! I'm Lucas.</span><br />
        <span class="line opacity-0 animate-fade-in-left delay-1">I'm a CS student</span><br />
        <span class="line opacity-0 animate-fade-in-left delay-2">based in Copenhagen.</span>
      </h1>
    </div>
  
    <!-- Right Side: "See my projects" Button -->
    <div class="flex flex-col items-center justify-center ml-10 opacity-0 animate-fade-in-right delay-3">
      <a href="/projects" class="text-2xl md:text-3xl font-semibold text-white bg-gradient-to-r from-blue-800 to-blue-900 py-2 px-6 rounded-lg hover:bg-blue-600 transition duration-300">
        See my projects
      </a>
    </div>
  </section>
  
  <style>
    /* Fade-in animation for left (already used for the text) */
    @keyframes fadeInFromLeft {
      0% {
        opacity: 0;
        transform: translateX(-30px);
      }
      100% {
        opacity: 1;
        transform: translateX(0);
      }
    }
  
    /* Fade-in animation for right (for the button) */
    @keyframes fadeInFromRight {
      0% {
        opacity: 0;
        transform: translateX(30px);
      }
      100% {
        opacity: 1;
        transform: translateX(0);
      }
    }
  
    .animate-fade-in-left {
      animation: fadeInFromLeft 2s ease-out forwards;
    }
  
    /* Apply the new fade-in-from-right animation to the button */
    .animate-fade-in-right {
      animation: fadeInFromRight 2s ease-out forwards;
    }
  
    /* Add delay for each line and the button */
    .delay-1 {
      animation-delay: 1s;
    }
  
    .delay-2 {
      animation-delay: 2s;
    }
  
    .delay-3 {
      animation-delay: 3s;
    }
  
    .line {
      display: inline-block;
    }
  </style>
  